<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:background="@drawable/head"
        android:src="?attr/selectableItemBackground"
        android:minHeight="@android:dimen/app_icon_size"
        app:layout_constraintDimensionRatio="H,1024:539"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xml"
        style="@style/btn"
        android:text="@string/left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv" />

    <TextView
        android:id="@+id/x2c"
        style="@style/btn"
        android:background="@color/colorPrimary"
        android:text="@string/right"
        app:layout_constraintLeft_toRightOf="@id/xml"
        app:layout_constraintTop_toTopOf="@id/xml" />

    <androidx2j.sample.app.CustomView
        android:id="@+id/custom"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/x2c"
        app:mixColor="black|red"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <fragment
        android:id="@+id/fragment"
        android:name="androidx2j.sample.app.MyFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom" />

    <ViewStub
        android:id="@+id/stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>